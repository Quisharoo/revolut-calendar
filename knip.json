{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": [
    "client/src/main.tsx",
    "server/index.ts",
    "api/index.ts",
    "scripts/**/*.ts"
  ],
  "project": [
    "client/src/**/*.{ts,tsx}",
    "server/**/*.ts",
    "shared/**/*.ts",
    "api/**/*.ts",
    "scripts/**/*.ts"
  ],
  "ignore": [
    "client/src/**/__tests__/**/*",
    "client/src/**/*.test.{ts,tsx}",
    "client/src/**/*.spec.{ts,tsx}",
    "tests/**/*"
  ],
  "ignoreBinaries": [
    "vitest",
    "depcruise"
  ]
}
